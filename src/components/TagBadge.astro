---
interface Props {
  tag: string;
  href?: string;
}

const { tag, href } = Astro.props;
const tagUrl = href || `/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`;
---

<a
  href={tagUrl}
  class="inline-block bg-tag-blue text-white text-xs px-2.5 py-1 rounded-full hover:bg-tag-hover transition-colors"
>
  {tag}
</a>
